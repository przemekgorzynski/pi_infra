#!/bin/sh
# variables
BOOT=`df -Ph | grep boot | awk '{ print $3}'`
BOOT_TOTAL=`df -Ph | grep boot | awk '{ print $2}'`
ROOT=`df -Ph | grep root | awk '{ print $3}'`
ROOT_TOTAL=`df -Ph | grep root | awk '{ print $2}'`
SDA1=`df -Ph | grep sda1 | awk '{ print $3}'`
SDA1_TOTAL=`df -Ph | grep sda1 | awk '{ print $2}'`
SDB1=`df -Ph | grep sdb1 | awk '{ print $3}'`
SDB1_TOTAL=`df -Ph | grep sdb1 | awk '{ print $2}'`
MEMORY1=`free -t -m | grep "Mem" | awk '{print $3" MB";}'`
MEMORY2=`free -t -m | grep "Mem" | awk '{print $2" MB";}'`
RELEASE=`cat /etc/os-release | head -n 1 | awk -F "\"" '{print $2}'`
MONITORING_CONTAINER=`docker ps -a | grep collectd | awk '{ print $7 " " $8 " " $9 }'`
#System uptime
uptime=`cat /proc/uptime | cut -f1 -d.`
upDays=$((uptime/60/60/24))
upHours=$((uptime/60/60%24))
upMins=$((uptime/60%60))
upSecs=$((uptime%60))

echo "
 - OS Release:.............: $RELEASE
 - System uptime...........: $upDays days $upHours hours $upMins minutes $upSecs seconds
 - Monitoring container....: $MONITORING_CONTAINER
 - Memory used.............: $MEMORY1 / $MEMORY2 used
 - SD /boot space..........: $BOOT  / $BOOT_TOTAL used
 - SD / space..............: $ROOT / $ROOT_TOTAL used
 - SDA disk space..........: `if [ $SDA1 > 0 ]; then echo "$SDA1 / $SDA1_TOTAL used"; else echo "SDA disk not mounted"; fi`
 - SDB disk space..........: `if [ $SDB1 > 0 ]; then echo "$SDB1 / $SDB1_TOTAL used"; else echo "SDB disk not mounted"; fi`
"